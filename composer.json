{
    "name": "openeuropa/drupal-site-template",
    "description": "A template for setting up an OpenEuropa Drupal site.",
    "type": "project",
    "license": "EUPL-1.2",
    "require": {
        "php": "~7.1",
        "composer/installers": "^1.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/core": "^8.6",
        "drush/drush": "^9.0",
        "openeuropa/oe_profile": "^0.2",
        "openeuropa/oe_theme": "^0.6",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/console": "~1.6",
        "drupal/drupal-extension": "~4.0",
        "nikic/php-parser": "~2.0||~3.0||~4.0",
        "openeuropa/code-review": "~1.0.0-alpha5",
        "openeuropa/composer-artifacts": "~0.1",
        "openeuropa/drupal-core-require-dev": "^8.6",
        "openeuropa/task-runner": "~1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "./vendor/bin/run drupal:site-setup"
        ],
        "post-root-package-install": [
            "@setup"
        ],
        "post-create-project-cmd": [
            "@cleanup"
        ],
        "post-update-cmd": [
            "./vendor/bin/run drupal:site-setup"
        ],
        "cleanup": "DrupalSiteTemplate\\composer\\SetupWizard::cleanup",
        "setup": "DrupalSiteTemplate\\composer\\SetupWizard::setup"
    },
    "extra": {
        "artifacts": {
            "openeuropa/oe_theme": {
                "dist": {
                    "url": "https://github.com/{name}/releases/download/{pretty-version}/{project-name}-{pretty-version}.tar.gz",
                    "type": "tar"
                }
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/SetupWizard.php"
        ],
        "psr-4": {
            "OpenEuropa\\my_site\\": "./src/"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}
